<?xml version="1.0" encoding="utf-8"?>
<!-- 新专辑布局 用framelayout实现， 要显示的要盖在上面，即写在后面，
        用一个全屏的ObservableRecyclerView来监听滑动事件，
        其第一项item有paddingtop留有空位显示billboard的头部，
        然后滑动时候使其头部也动起来，实现动画效果
        -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_billboard_recyclerview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.administrator.audioplayer.widget.ObserableRecyclerViewWithEmptyView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/orv_billboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/empty" />

        <ImageView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <include layout="@layout/layout_billboard_header"/>
    

    <android.support.v7.widget.Toolbar
        android:theme="@style/Theme.AppCompat"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/Toolbar.SubTitle"
        android:id="@+id/tb_billboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_billboard_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_loading_view"
                android:id="@+id/layout_loading_view"/>

            <TextView
                android:id="@+id/tv_try_again"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal|bottom"
                android:visibility="gone"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="请连接网络后点击屏幕重试"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom" />
</FrameLayout>
