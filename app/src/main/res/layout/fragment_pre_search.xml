<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_pre_search_content_container"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_title_pre_search_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:text="热门搜索" />

        <FrameLayout
            android:id="@+id/fl_pre_search_fragment"
            android:layout_below="@+id/tv_title_pre_search_fragment"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:maxLines="1"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:maxLines="1"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:padding="7dp"
                android:background="@drawable/tv_hot_word_selector"
                android:maxLines="1"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_pre_search_fragment10" />
        </FrameLayout>

        <View
            android:layout_below="@+id/fl_pre_search_fragment"
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="40dp"
            android:background="@color/grey" />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/view_line"
            android:id="@+id/rv_pre_search_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>



    <FrameLayout
        android:id="@+id/fl_pre_search_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_loading_view"
                android:id="@+id/layout_loading_view"/>

            <TextView
                android:id="@+id/tv_try_again"
                android:visibility="gone"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="请连接网络后点击屏幕重试"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </RelativeLayout>
    </FrameLayout>


</FrameLayout>